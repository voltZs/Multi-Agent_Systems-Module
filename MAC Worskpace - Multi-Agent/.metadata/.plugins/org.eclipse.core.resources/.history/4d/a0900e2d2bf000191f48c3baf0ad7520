package mas.coursework;

public class Order {
	
	private int screen;
	private int battery;
	private int ram;
	private int storage;
	
	public Order(){
		this.randomize();
	}

	private void randomize() {
		if(Math.random() < 0.5){
			//small smartphone 
			screen = 5;
			battery = 2000;
		} else {
			//phablet
			screen = 7;
			battery = 3000;
		}
		
		if(Math.random() < 0.5){
			ram = 4;
		} else {
			ram = 8;
		}
		
		if(Math.random() < 0.5){
			storage = 64;
		} else {
			storage = 256;
		}
	}
	
}
