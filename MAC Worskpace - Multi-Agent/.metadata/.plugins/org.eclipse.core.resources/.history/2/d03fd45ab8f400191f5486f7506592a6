package mas.coursework;
import mas.coursework_ontology.elements.Component;
import mas.coursework_ontology.elements.Phone;
import mas.coursework_ontology.elements.SmallPhone;

public class PhoneOrderGenerator {
	Phone phone;
	Component screen = new Component();
	screen.setType("screen");
	Component battery = new Component();
	battery.setType("battery");
	Component ram = new Component();
	ram.setType("ram");
	Component storage = new Component();
	storage.setType("storage");
	
	public PhoneOrderGenerator(){
	}
	
	public Phone getPhone(){
		randomize();
		return phone;
	}
	
	public void randomize(){
		
		if(Math.random() < 0.5){
			//small smartphone 
			SmallPhone smallPhone = new SmallPhone();
			smallPhone.set
			details.put("screen", 5);
			details.put("battery", 2000);
		} else {
			//phablet
			details.put("screen", 7);
			details.put("battery", 3000);
		}
		
		if(Math.random() < 0.5){
			details.put("ram", 4);
		} else {
			details.put("ram", 8);
		}
		
		if(Math.random() < 0.5){
			details.put("storage", 64);
		} else {
			details.put("storage", 256);
		}
		
		details.put("quantity", (int) Math.floor(1 + 50 * Math.random()));
	}
}